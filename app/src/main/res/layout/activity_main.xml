<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">


       <EditText
           android:id="@+id/grid_edt"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:hint="GRID"/>
        <EditText
           android:id="@+id/name_edt"
           android:layout_width="match_parent"
            android:layout_below="@id/grid_edt"
           android:layout_height="wrap_content"
           android:hint="NAME"/>
        <EditText
           android:id="@+id/phone_edt"
           android:layout_width="match_parent"
            android:layout_below="@id/name_edt"
           android:layout_height="wrap_content"
           android:hint="PHONE"/>
       <EditText
           android:id="@+id/email_edt"
           android:layout_width="match_parent"
            android:layout_below="@id/phone_edt"
           android:layout_height="wrap_content"
           android:hint="EMAIL"/>


       <Button
           android:id="@+id/submit_btn"
           android:layout_width="wrap_content"
           android:text="submit"
           android:layout_marginStart="20dp"
           android:layout_marginTop="10dp"
           android:layout_below="@id/email_edt"
           android:layout_height="wrap_content"/>

       <Button
           android:id="@+id/read_btn"
           android:layout_width="wrap_content"
           android:text="Read-"
           android:layout_marginStart="20dp"
           android:layout_marginTop="10dp"
           android:layout_below="@id/email_edt"
           android:layout_height="wrap_content"
           android:layout_toEndOf="@id/submit_btn"/>



       <androidx.recyclerview.widget.RecyclerView
           android:id="@+id/RvView"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@id/submit_btn"/>

   </RelativeLayout>


</RelativeLayout>